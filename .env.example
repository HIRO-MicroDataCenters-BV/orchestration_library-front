# Environment Configuration for Orchestrator Library UI
# Copy this file to .env and configure your local values

# Application Environment
NODE_ENV=development

# Local Development Server
LOCAL_DEV_URL=http://localhost:4200

# Backend Service URLs
API_BACKEND_URL=http://51.44.28.47:30015
K8S_DASHBOARD_URL=http://51.44.28.47:30016
COG_DEV_URL=https://dashboard.cog.hiro-develop.nl
COG_PROD_URL=http://51.44.28.47:30080
DEX_AUTH_URL=http://51.44.28.47:30080

# API Configuration
API_URL=http://localhost:8086
DASHBOARD_URL=http://localhost:8086
COG_URL=/cog

# OIDC Configuration
OIDC_AUTHORITY=/dex
OIDC_CLIENT_ID=authservice-oidc
OIDC_SCOPE=openid profile email groups
OIDC_RESPONSE_TYPE=code

# Network Configuration
REQUEST_TIMEOUT=15000
USER_AGENT=Orchestrator-Proxy-Test/1.0
MAX_REDIRECTS=5
RETRY_ATTEMPTS=3
RETRY_DELAY=1000

# Test Configuration
TEST_ENDPOINT_TIMEOUT=10000
TEST_AUTH_FLOW_TIMEOUT=30000
TEST_CONNECTIVITY_TIMEOUT=5000
TEST_INTERVAL_BETWEEN=1000
TEST_INTERVAL_HEALTH=500
TEST_INTERVAL_AUTH_STEP=2000

# Logging
LOG_LEVEL=info
DEBUG_MODE=false

# Language
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en

# Security
SECURE_COOKIES=true
COOKIE_DOMAIN=localhost
